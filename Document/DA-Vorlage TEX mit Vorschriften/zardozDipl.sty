 \markboth{\ \thechapter\ #1}{}}
\renewcommand{\sectionmark}[1]{%    %shows section right header
 \markright{\thesection.\ #1}}
\renewcommand{\subsectionmark}[1]{%    %shows subsection right header
% \markright{\thesubsection.\ #1}}
 \markright{\thesubsection\ #1}}


%----- redefine plain pagestyle
\def\plainfoot{%
    \ifnum \thepage>0 %
        \bf \thepage %
        \else \ %
    \fi
}
\fancypagestyle{plain}{%
    \fancyhf{}
    \fancyfoot[C]{\plainfoot}
    \fancyfoot[C]{\thepage}
    \renewcommand{\headrulewidth}{0pt}
    \renewcommand{\footrulewidth}{0pt}
}

%----- switch to and define new pagestyle zardoz
\fancypagestyle{zardoz}{%
    \lhead{\leftmark} %left head
    \rhead{\sl\rightmark \hspace*{0.5cm} \bf\thepage} % right head
    \cfoot{}
    \renewcommand{\headrulewidth}{0.4pt}
    \renewcommand{\footrulewidth}{0pt}
}
